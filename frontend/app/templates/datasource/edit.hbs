<article class="content item-editor-page">
  <div class="title-block">
    <h3 class="title"> Editing datasource {{ model.name }}
      <span class="sparkline bar" data-type="bar"></span>
    </h3>
  </div>
  <form name="item" id="newDb" enctype="multipart/form-data" {{action 'save' on='submit'}}>
    <div class="card card-block">
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
        <div class="col-sm-10">
          {{input type="text" class="form-control boxed" value=model.name}}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Description: </label>
        <div class="col-sm-10">
          <div class="form-group">
            {{textarea class="form-control" id="description" rows="5" value=model.description maxlength="1600" height="30vh"}}
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Type: </label>
        <div class="col-sm-10">
          <select class="c-select form-control boxed" onchange={{action (mut model.data_type) value="target.value"}}>
            <option value="">Select here</option>
            <option value="database">Database</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Format: </label>
        <div class="col-sm-10">
          <select class="c-select form-control boxed" onchange={{action (mut model.data_format) value="target.value"}} >
            <option value="">Select here</option>
            <option value="json">json</option>
          </select> </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 col-sm-offset-2">
          <button type="submit" class="btn btn-primary"> Enviar </button>
        </div>
      </div>
    </div>
  </form>
</article>

<div class="section-wrapper">
  <div class="content">
    <div class="inner-wrapper">
      <form class="form-wrapper" action="">
        <div class="input-wrapper">
          <label class="label" for="email">E-mail</label>
          {{input type='email' class='input' name='email' id='email' value=email}}
          {{#if invalidEmailErrorMessage}}<span id="email-error" class="has-error">{{invalidEmailErrorMessage}}</span>{{/if}}
        </div>
        <div class="input-wrapper">
          <label class="label" for="name">Nome</label>
          {{input type='password' class='input' name='password' id='password' value=password}}
          {{#if invalidPasswordErrorMessage}}<span id="email-error" class="has-error">{{invalidPasswordErrorMessage}}</span>{{/if}}
        </div>
        <div class="row u-margin-3">
          <div class="col-3-12">
            <label class="label label--checkbox" for="remember">
              {{input class="input---checkbox" id="remember" type="checkbox" checked=remember}}
              Lembrar-se de mim
            </label>
          </div>
          <div class="u-flow-opposite">
            {{link-to "Esqueceu sua senha?" password.request class="description description--size-3 u-color--red-well"}}
          </div>
        </div>
        <div class="input-wrapper u-margin-4">
          <div class="u-center-elements">
            <input type="submit" class="anchor-button anchor-button--size-2" value="Enviar" />
          </div>
        </div>
      </form>
      <div class="u-center-elements row">
        <p class="description description--size-3 u-bottom">
        Ainda n√£o possui uma conta?
        {{link-to "Inscreva-se" "landing-page.cadastro" class="u-color--red-well"}}
        </p>
      </div>
    </div>
  </div>
</div>

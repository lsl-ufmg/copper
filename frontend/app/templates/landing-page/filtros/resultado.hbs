<div class="section-wrapper">
  <div class="content">
    {{link-to '< voltar' 'landing-page.filtros.aberto' model.job.id class="anchor-button anchor-button--type-2 anchor-button--size-3 anchor-button--color-4 u-margin-3 no-active"}}
    <div class="u-center-col">
      <article class="col-9-12">
        <header class="u-center-elements">
          <h1 class="title">{{model.job.name}}</h1>
          <p class="description description--size-2 u-color--gray-mine-shaft">em
          {{#link-to 'landing-page.bases.aberta' model.datasource.id}}
            <strong>{{model.job.datasource.name}}</strong>
          {{/link-to}}
          </p>
          <p class="description description--size-2">{{format-date model.job.finished}} por
          <a href="#"><strong>{{model.job.user.fullname}}</strong></a>
          </p>
        </header>
        <div>
          <p class="title">Termos buscados: {{model.job.filter}}</p>
        </div>
      </article>
    </div>
    <div class="u-center-col">
      <article class="col-9-12">
        {{component model.component
        width="100%"
        height="600px"
        _id="uniq-visu"
        jobId=model.job.id
        title="Visualization"
        dataUrl=model.url
        search=model.search
        }}
      </article>
    </div>
    {{#unless (eq model.component "visualizations/search-tool")}}
      {{visualizations/about-vis
      vis=model.component
      }}
    {{/unless}}
  </div>
</div>

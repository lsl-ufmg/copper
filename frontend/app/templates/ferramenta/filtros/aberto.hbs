<div class="section-wrapper">
  <div class="content">
    {{link-to '< voltar' 'ferramenta.filtros' class="anchor-button anchor-button--type-2 anchor-button--size-3 anchor-button--color-4 u-margin-3 no-active"}}
    <div class="u-center-col">
      <article class="col-9-12">
        <header class="u-center-elements">
          <h1 class="title">{{model.name}}</h1>
          <p class="description description--size-2 u-color--gray-mine-shaft">em
          {{#link-to 'landing-page.bases.aberta' model.datasource.id}}
            <strong>{{model.datasource.name}}</strong>
          {{/link-to}}
          </p>
          <p class="description description--size-2">{{format-date model.finished}} por
          <a href="#"><strong>{{model.user.fullname}}</strong></a>
          </p>
        </header>
        <div>
          <p class="paragraph">{{model.description}}</p>
        </div>
      </article>
    </div>
    <hr class="separator" />
    <h2 class="title">Resultados para</h2>
    <!-- VISUALIZATION LIST -->
    <ul class="cards-list content--list">
      {{#each resultsTypes as |resultType|}}
        <li class="cards-list__item col-3-12">
          {{#link-to 'ferramenta.filtros.resultado' model.id resultType.id class="card-list__item--link"}}
            <div class="card card--type-2">
              <a href="#" class="card__header">
                <img src="/assets/img/icons/icon-results--{{resultType.image}}.svg" alt={{resultType.text}} />
              </a>
              <div class="card__content">
                <h3 class="card__info"><a href="#">{{resultType.text}}</a></h3>
              </div>
            </div>
          {{/link-to}}
        </li>
      {{/each}}
    </ul>
    <!-- END VISUALIZATION LIST -->
  </div>
</div>
<!-- END FILTER PAGE -->


<main class="tool-content-wrapper" id="main">
<!-- FILTROS CONTENT -->
  <h2 class="title">Resultado dos filtros</h2>
  {{link-to 'Criar novo filtro' 'ferramenta.filtros.adicionar' class="anchor-button"}}
  <div class="u-flow-opposite">
    {{input type="search" class="input input--search" placeholder="busca" value=filterText}}
    <button class="input--search--button"></button>
  </div>
  {{#if jobs.jobsRunning}}
    <section class="row">
      <h3 class="title title--type-2">Filtros em andamento</h3>
      <table class="table">
        <thead class="table__head">
          {{jobs/table-header tableRunning=true}}
        </thead>
        <tbody class="table__body">
          {{#each jobs.jobsRunning as |job|}}
            {{jobs/table-item job=job tableRunning=true}}
          {{/each}}
        </tbody>
      </table>
    </section>
  {{/if}}
  <section class="row">
    <h3 class="title title--type-2">Filtros conclu√≠dos</h3>
    <div class="link-list-wrapper-more u-flow-opposite">
      <button class="anchor-button anchor-button--type-2 anchor-button--size-3 anchor-button--color-4" type="button" onclick={{route-action "deleteCheckeds"}}>
        <i class="fa fa-trash-o icon"></i> Apagar todos
      </button>
    </div>
    <table class="table">
      <thead class="table__head">
        {{jobs/table-header selectAll=(route-action "selectAll")}}
      </thead>
      <tbody class="table__body">
        {{#each jobs.jobsCompleted as |job|}}
          {{jobs/table-item job=job wasChecked=(route-action "wasChecked") }}
        {{/each}}
      </tbody>
    </table>
  </section>
<!-- END TOOL CONTENT -->
</main>

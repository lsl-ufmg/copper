<main id="main" class="tool-content-wrapper">
<div class="row">
  {{link-to '< voltar' 'ferramenta.bases' class="anchor-button anchor-button--type-2 anchor-button--size-3 anchor-button--color-4 u-margin-3 no-active"}}
  </div>
  <h2 class="title">Editar base de dados</h2>
  <form {{action 'salvar' on='submit'}}>
    <div class="wrapper-content">
      <div class="inner-wrapper inner-wrapper--type-2">
        <div class="input-wrapper">
          <label class="label" for="name">Nome:</label>
          {{input class="input input--size-2" type="text" name="model.name" value=model.name}}
        </div>
        <div class="input-wrapper">
          <label class="label" for="description">Descrição:</label>
          {{textarea class="input input--textarea" id="description" value=model.description}}
        </div>
        <div class="input-wrapper">
          <label class="label" for="type">Tipo:</label>
          <div class="custom-select custom-select--size-2" id="type">
            <select onchange={{action (mut model.data_type) value='target.value'}}>
              {{#each dataTypes as |dataType|}}
                <option value={{dataType}} selected={{eq dataType model.data_type}}>{{dataType}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="input-wrapper">
          <label class="label" for="format">Formato:</label>
          <div class="custom-select custom-select--size-2" id="format">
            <select onchange={{action (mut model.data_format) value='target.value'}}>
              {{#each dataFormats as |dataFormat|}}
                <option value={{dataFormat}} selected={{eq dataFormat model.data_format}}>{{dataFormat}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="u-center-elements">
      <button class="anchor-button anchor-button--size-2" type="submit">Salvar alterações</button>
    </div>
  </form>
</main>

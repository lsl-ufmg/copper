<main class="tool-content-wrapper" id="main">
  <div class="row">
    {{link-to '< voltar' 'ferramenta.bases' class="anchor-button anchor-button--type-2 anchor-button--size-3 anchor-button--color-4 u-margin-3 no-active"}}
  </div>
  <h2 class="title">Adicionar base de dados</h2>
  <form name="item" id="newDb" enctype="multipart/form-data" {{action 'create' on='submit'}}>
    <input id='user' type="hidden" name="datasource[user_id]" value={{sessionAccount.id}}>
    <div class="wrapper-content">
      <div class="inner-wrapper inner-wrapper--type-2">
        <div class="input-wrapper">
          <label class="label" for="name">Nome:</label>
          {{input type="text" class="input input--size-2" name="datasource[name]" placeholder="Nova base de dados" required=true}}
        </div>
        <div class="input-wrapper">
          <label class="label" for="description">Descrição:</label>
          {{textarea class="input input--textarea" id="description" name="datasource[description]" placeholder="Descrição da sua base de dados" required=true}}
        </div>
        <div class="input-wrapper">
          <span class="label">Arquivo:</span>
          <label for="inputfile" class="anchor-button anchor-button--type-2 anchor-button--color-3" >Procurar</label>
          <input type="file" class="input--file" name="datasource[file]" id="inputfile" onchange={{route-action 'clearErrors'}}>
          <span id='inputfile-error' class="inputfile-info"><i class="icon fa"/>Selecione um arquivo</span>
        </div>
        <div class="input-wrapper">
          <label class="label" for="type">Tipo:</label>
          <div class="custom-select custom-select--size-2" id="type">
            <select name="datasource[data_type]">
              <option value="database" selected>Datasource</option>
            </select>
          </div>
        </div>
        <div class="input-wrapper">
          <label class="label" for="format">Formato:</label>
          <div class="custom-select custom-select--size-2" id="format">
            <select name="datasource[data_format]">
              <option value="json" selected>JSON</option>
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="u-center-elements">
      <button class="anchor-button anchor-button--size-2" type="submit">Enviar base de dados</button>
    </div>
  </form>


  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="loader"></div>
      </div>
    </div>
  </div>
</main>

<!-- TOOL CONTENT -->
<main class="tool-content-wrapper" id="main">
<section>
  <h2 class="title">Base de dados</h2>
  {{link-to 'Enviar nova base' 'ferramenta.bases.adicionar' class="anchor-button"}}
  <form class="u-flow-opposite">
    {{input type="search" class="input input--search" placeholder="busca" value=filterText}}
    <button class="input--search--button"></button>
  </form>
  <section class="row">
    <h3 class="title title--type-2">Base de dados enviada</h3>
    <div class="link-list-wrapper u-flow-opposite">
      <button class="anchor-button anchor-button--type-2 anchor-button--size-3 anchor-button--color-4" type="button" onclick={{route-action "deleteCheckeds"}}>
        <i class="fa fa-trash-o icon"></i> Apagar todos
      </button>
    </div>
    <table class="table">
      <thead class="table__head">
        {{datasources/table-header selectAll=(route-action "selectAll")}}
      </thead>
      <tbody class="table__body">
        {{#each datasources as |datasource| }}
          {{datasources/table-item datasource=datasource wasChecked=(route-action "wasChecked")}}
        {{/each}}
      </tbody>
    </table>
    {{table-pagination content=datasources}}
  </section>
</section>
</main>
<!-- END TOOL CONTENT -->

{{#unless empty}}

  <div class='topicos-vis-wrapper'>
    <div class="gViz-header">
      <div class='symbol'>
        <span class="fa-stack fa-lg">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-list fa-stack-1x fa-inverse"></i>
        </span>
      </div>
      <span class='title'>{{title}}</span>
    </div>

    <div class='topicos-vis-left'>
      <div class='gViz-wrapper' data-id={{_id}} style={{style}} >
        <table class="table table-striped table-hover gViz-table table-bordered">
          <thead>
            <tr>
              {{#each header as |h i|}}
                <th>{{{h}}}</th>
              {{/each}}
            </tr>
          </thead>
          <tbody>
            {{#each tableData as |tr|}}
              <tr>
                <td>{{tr.element.nome}}</td>
                <td>
                  {{#each tr.eixos as |e|}}
                    <a class='bar' href='/job/{{jobId}}/visualization/search-tool?search=Eixo {{e.id}}' target='_blank' style='height: {{e.height}}px; margin-top: {{e.mTop}}px; background-color: {{e.bg_color}};' title='Eixo: {{e.id}}'></a>
                  {{/each}}
                </td>
                <td>{{tr.element.contagem_comentarios}}</td>
                <td>
                  {{#each tr.top_palavras as |p|}}
                    <a href='/job/{{jobId}}/visualization/search-tool?search={{p.name}}' target='_blank' class='word' style='font-size:{{p.value}}px;'>{{p.name}}</a>
                  {{/each}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    <div class='topicos-vis-right'>
      <div class="gViz-header">
        <div class='symbol'>
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-paint-brush fa-stack-1x fa-inverse"></i>
          </span>
        </div>
        <span class='title'>Eixos em Debate</span>
      </div>

      <div class='gViz-wrapper gViz-legend' data-id={{_id}} style={{style}} >
        {{#each-in legends as |key value|}}
          <div class='row legend'>
            <div class='col-xs-12'>
              <span class='symbol'>
                <span class="fa-stack fa-lg" style='color: {{value}}; margin-right: 10px;'>
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-paint-brush fa-stack-1x fa-inverse"></i>
                </span>
              </span>
              <span class='text-legend'>Eixo {{key}}</span>
            </div>
          </div>
        {{/each-in}}
      </div>

    </div>
  </div>

{{else}}
  {{visualizations/empty-vis}}
{{/unless}}

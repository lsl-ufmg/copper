<td>
  <label class="item-check" id="select-all-items">
    <input id="checkbox-{{job.id}}" type="checkbox" class="checkbox" onchange={{action "checked" job.id}} >
    <span></span>
  </label>
</td>
<td>{{job.name}}</td>
<td>{{currentUser.name}}</td>
<td><i class={{job.status.icon}}></i></td>
<td>
  {{#if job.hasCompleted}}
    {{#link-to 'job.result' job.id}}
      {{option-bar.exec-btn class='play' icon='eye'}}
    {{/link-to}}
  {{else}}
    {{option-bar.exec-btn class='empty' icon='eye-slash'}}
  {{/if}}
</td>
<td>{{format-date job.started}}</td>
<td>
  {{#if job.hasCompleted}}
    {{format-date job.finished}}
  {{else}}
    -
  {{/if}}
</td>
